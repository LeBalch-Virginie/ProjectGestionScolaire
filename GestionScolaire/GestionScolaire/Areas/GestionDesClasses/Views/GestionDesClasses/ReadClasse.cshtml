@using GestionScolaire.Areas.GestionDesClasses.Models

@model ClasseModels

@{
    ViewBag.Title = "Details";
}

<h2>Classe @Model.title</h2>


<p>Professeur principal : <br />
    @Html.ActionLink(Model.userName, "ReadUser","Administration", new {area = "Administration", id = Model.userId }) <br /><br />
    Année : <br />
    @Html.ActionLink(Model.yearName.ToString(),"ReadAnnee", "Administration", new {area = "Administration", id = Model.yearId }) <br /><br />
    Etablissement : <br />
    @Html.ActionLink(Model.etablissementName, "ReadEtablissement", new { id = Model.etablissementId }) <br /><br />
    Liste des élèves : <br />
</p>

<p>
    @Html.ActionLink("Edit", "EditClasse", new { id = Model.id })
    @Html.ActionLink("Back to List", "ReadClasses")
</p>