@model GestionScolaire.Areas.GestionDesClasses.Models.AcademieModels

@{
    ViewBag.Title = "Create";
}

<h2>Création d'une académie</h2>

@using (Html.BeginForm()) {
@Html.ValidationSummary(true)
<div id="content_form">
    <table class="table" id="form_creation">
        <tr>
            <td> @Html.LabelFor(model => model.name)</td>
            <td> @Html.TextBoxFor(model => model.name)
                 @Html.ValidationMessageFor(model => model.name)
            </td>
        </tr>
    </table>
    <input type="submit" value="Create" />
</div>
}

<div>
    @Html.ActionLink("Back to List", "ReadAcademies")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
