@using GestionScolaire.Areas.Eleves.Models
@model IEnumerable<EleveModels>

@{
    ViewBag.Title = "Elèves";
}

<h2>Ensemble des élèves</h2>

<div class="create">
    @Html.ActionLink("Création d'un nouvel élève", "CreateEleve")
</div>

<div id="search">
@using(Ajax.BeginForm("SearchEleves", "Eleves",
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "eleve"
    }))
{
  <input type="text" name="query" />
  <input type="submit" value="Filtrer par nom" /> 
}
</div>

@Html.Partial("_elevesList")



