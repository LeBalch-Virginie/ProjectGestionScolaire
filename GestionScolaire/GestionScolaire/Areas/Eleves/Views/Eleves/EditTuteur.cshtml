@using GestionScolaire.Areas.Eleves.Models
@model TuteurModels

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>tuteurs</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.lastName)
            @Html.LabelFor(model => model.firstName)
            @Html.LabelFor(model => model.address)
            @Html.LabelFor(model => model.postCode)
            @Html.LabelFor(model => model.town)
            @Html.LabelFor(model => model.tel)
            @Html.LabelFor(model => model.mail)
            @Html.LabelFor(model => model.comment)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lastName)
            @Html.ValidationMessageFor(model => model.lastName)
            @Html.EditorFor(model => model.firstName)
            @Html.ValidationMessageFor(model => model.firstName)
            @Html.EditorFor(model => model.address)
            @Html.ValidationMessageFor(model => model.address)
            @Html.EditorFor(model => model.postCode)
            @Html.ValidationMessageFor(model => model.postCode)
            @Html.EditorFor(model => model.town)
            @Html.ValidationMessageFor(model => model.town)
            @Html.EditorFor(model => model.tel)
            @Html.ValidationMessageFor(model => model.tel)
            @Html.EditorFor(model => model.mail)
            @Html.ValidationMessageFor(model => model.mail)
            @Html.EditorFor(model => model.comment)
            @Html.ValidationMessageFor(model => model.comment)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ReadTuteurs")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
