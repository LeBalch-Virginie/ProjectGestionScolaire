@using GestionScolaire.Areas.Eval.Models
@model EvaluationModels

@{
    ViewBag.Title = "Details";
}

<h2>Evaluation du @Model.date</h2>

<div class="create">
    @Html.ActionLink("Saisir les résultats", "SaisirResultats", new { idEval = Model.id })
</div>

@Html.ActionLink("Edit", "EditEvaluation", new { id = Model.id })

<table class="table">
    <tr>
        <td>@Html.LabelFor(model => model.classroomName)</td>
        <td>@Html.LabelFor(model => model.userName)</td>
        <td>@Html.LabelFor(model => model.periodName)</td>
        <td>@Html.LabelFor(model => model.totalPoint)</td>
    </tr>
    <tr>      
        <td>@Html.ActionLink(Model.classroomName,"ReadClasse", "GestionDesClasses", new {area = "GestionDesClasses" ,id = Model.classroomId },null)</td>
        <td>@Html.ActionLink(Model.userName, "ReadUser","GestionDesClasses", new {area = "GestionDesClasses", id = Model.userId },null)</td>
        <td>@Html.ActionLink(Model.periodName.ToString(), "ReadPeriode","Administration", new {area = "Administration", id = Model.periodId },null)</td>
        <td>@Model.totalPoint</td>
    </tr>
</table>

 @Html.ActionLink("Back to List", "ReadEvaluations")
